<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.Toolbar">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:src="@drawable/title"
                android:layout_gravity="center"/>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/tv_round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="878회차"
                    android:textStyle="bold"
                    android:textSize="56sp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dovemayo"/>

                <TextView
                    android:id="@+id/tv_drtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(2019년 09월 28일 추첨)"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dovemayo"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/iv_num1"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ball01"/>
                    <ImageView
                        android:id="@+id/iv_num2"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ball12"/>
                    <ImageView
                        android:id="@+id/iv_num3"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ball23"/>
                    <ImageView
                        android:id="@+id/iv_num4"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ball34"/>
                    <ImageView
                        android:id="@+id/iv_num5"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ball45"/>
                    <ImageView
                        android:id="@+id/iv_num6"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ball06"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/plus"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:id="@+id/iv_num7"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ball28"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/home_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자세히보기"/>
                    <Button
                        android:id="@+id/home_storeSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="당첨판매점 확인"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/qrBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="qr코드"/>
                    <Button
                        android:id="@+id/writeBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="직접입력"/>
                </LinearLayout>

                <!--<TextView
                    android:id="@+id/tv_winnerinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1등 당첨금 : 32억 799만 3500원 / 6명"
                    android:layout_gravity="center"
                    android:fontFamily="@font/dovemayo"
                    android:layout_marginBottom="16dp"/>-->
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>